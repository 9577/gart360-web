- content_for :subhead do
  = render 'sns/shared/header/gallery'

.wrap.home
  .container.cf
    .col-main
      = render 'nav', user: resource.user
      %dl.opus
        %dt
          #{resource.name} 廊
          %em （共#{resource.artworks_count}个作品）
        - resource.artworks.each do |artwork|
          %dd
            = link_to sns_gallery_artwork_path(resource, artwork), class: 'pic' do
              = image_tag artwork.avatar_url
            = link_to artwork.name, sns_gallery_artwork_path(resource, artwork)
            %br/
            %span.num #{artwork.images_count}张
            %span.icon.icon-like
              %i.fa.fa-heart
              = artwork.fans_count
    %aside.col-sub
      .lang-info
        = render_cell :user, :widget, user: resource.user
        .cf
        %span.tit 廊介绍
        %p.text
          %strong= resource.name
          %span= resource.content
  .bg