%section.panel.panel-default
  .row.m-l-none.m-r-none.bg-light.lter
    .col-sm-6.col-md-2.padder-v.b-r.b-light
      %span.fa-stack.fa-2x.pull-left.m-r-sm
        %i.fa.fa-circle.fa-stack-2x.text-info
        %i.fa.fa-columns.fa-stack-1x.text-white
      = link_to '#', class: 'clear' do
        %span.h3.block.m-t-xs
          %strong 11
        %small.text-muted.text-uc 杂志总数

    .col-sm-6.col-md-2.padder-v.b-r.b-light.lt
