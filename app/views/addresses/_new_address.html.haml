- append_class = nil unless current_user.addresses.count > 4
.col-md-3.col-xs-6{ class: append_class }
  %ul.list-unstyled.addr-item
    %li
      = "#{@address.province.name} #{@address.city.name} #{@address.district.name}"
      %span （#{@address.recipient} 收）
    %li= @address.body
    %img.addr-tip{:alt => "", :src => "images/addr-tip.png"}