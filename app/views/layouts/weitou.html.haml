!!!
%html
  %head
    %title= t('layout.title')
    %meta{:charset => "UTF-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/

    /[if lt IE 9]
      = javascript_include_tag 'html5shiv'
      = javascript_include_tag 'respond.min'
      = javascript_include_tag 'admin/ie/excanvas'

    = stylesheet_link_tag :weitou, media: :all

    = csrf_meta_tags

  %body{ id: params[:controller].gsub('/', '_'), class: params[:action] }

    = render 'header'
    
    = yield
    
    = render 'weitou/shared/sitemap'
    = render 'weitou/shared/footer'

    = javascript_include_tag :weitou
    = yield :js