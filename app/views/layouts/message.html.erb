<!--       <li><a href="#"><em class="icon icon-shopcart"></em>我的购物车</a></li> -->
    </menu>
    <%= yield %>
  </div>
  <%= render 'shared/footer' %>
</body>
</html>
<%= debug(params) if Rails.env.development? %>
